                var modificado = 0.0;
                var ejercido = 0.0;

                if ($("#ImporteContratado").val() == null) {
                    $("#ImporteContratado").val(0);
                }
                if ($("#ImporteModificado").val() == null) {
                    $("#ImporteModificado").val(0);
                }
                if ($("#ImporteEjercido").val() == null) {
                    $("#ImporteEjercido").val(0);
                }


                contratado = $("#ImporteContratado").val()
                modificado = $("#ImporteModificado").val()
                ejercido = $("#ImporteEjercido").val();

                var porEjercer = parseFloat(contratado) + parseFloat(modificado) - parseFloat(ejercido);
                $("#ImportePorEjercer").val(0);
            }

            $("#Autorizados").blur(function () {
                calcula();
            });
            $("#ImporteContratado").blur(function () {
                calcula();
            });
            $("#ImporteModificado").blur(function () {
                calcula();
            });
            $("#ImporteEjercido").blur(function () {
                calcula();
            });


            // fucniones para Programas y Sub-programas
