@model SmartBoard.Data.Models.SmartBoard.TblObra
@using SmartBoard.Models;

@{
    ViewData["Title"] = "Details";
    Layout = null;
    List<ObrasImagenesMetadata> listaimg = (List<ObrasImagenesMetadata>)ViewData["imagenes"];
}



<div>


    <div class="row h-25">

        @if (listaimg != null && listaimg.Count() > 0)
        {


            <dd class="col-sm-10">
                <div id="carouselExampleIndicators_@Model.Id" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        @if (listaimg != null && listaimg.Count() > 0)
                        {
                            int pos = 0;
                            foreach (var item in listaimg)
                            {
                                if (pos == 0)
                                {

                                    <li data-target="#carouselExampleIndicators_@Model.Id" data-slide-to="@pos" class="active"></li>
                                }
                                else
                                {
                                    <li data-target="#carouselExampleIndicators_@Model.Id" data-slide-to="@pos"></li>
                                }
                                pos++;
                            }
                        }

                    </ol>
                    <div class="carousel-inner">

                        @if (listaimg != null && listaimg.Count() > 0)
                        {
                            int pos = 0;
                            //foreach (var item in Model.ObrasImagenes)
                            foreach (var item in listaimg)
                            {
                                if (pos == 0)
                                {
                                    <div class="carousel-item active">
                                        <img class="d-block w-100 container_img" src="~/img/@item.Pathimagen" alt="First slide" id="myImg">

                                    </div>
                                }
                                else
                                {
                                    <div class="carousel-item">
                                        <img class="d-block w-100 container_img" src="~/img/@item.Pathimagen" alt="Second slide">

                                    </div>
                                }
                                pos++;
                            }
                        }

                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators_@Model.Id" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators_@Model.Id" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                <div id="carouselExampleIndicators_2" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators_2" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators_2" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators_2" data-slide-to="2"></li>
                        <li data-target="#carouselExampleIndicators_2" data-slide-to="3"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="..." alt=" UNO" id="myImg">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="..." alt="DOS">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="..." alt="TRES">
                        </div>

                        <div class="carousel-item">
                            <img class="d-block w-100" src="..." alt="CUATRO">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators_2" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators_2" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

            </dd>
        }
    </div>
    <div class="row" style="height:25px;">

    </div>
    <div class="row">
        <div class="col-md-12">
            <a class="btn btn-primary" asp-action="EditExpediente" asp-controller="TblObras" asp-route-id="@Model.Id">Mostrar Expediente</a>
            @if (listaimg != null && listaimg.Count() > 0)
            {
                @*<button type="button" class="btn btn-outline-info" data-toggle="modal" data-target=".example-modal-fullscreen">Ampliar Imagenes</button>*@
        <button type="button" class="btn btn-outline-info" data-toggle="modal" data-target="#default-example-modal-lg">Ampliar Imagenes</button>
            }
            else
            {
                @*<button type="button" class="btn btn-outline-info" disabled data-toggle="modal" data-target=".example-modal-fullscreen">Ampliar Imagenes</button>*@
        <button type="button" class="btn btn-outline-info" disabled data-toggle="modal" data-target="#default-example-modal-lg">Ampliar Imagenes</button>
            }
        </div>
    </div>
    <dl class="row h-75">


        <dd class="col-sm-12">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class="col-sm-6">
            Obra
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.Numeroobraexterno)
        </dd>


        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.Region)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.Region)
        </dd>
        <dt class="col-sm-6">
            Año
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.Year)
        </dd>

        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.Inversion)
        </dt>
        <dd class="col-sm-6">

            @((Model.Inversion.HasValue ? Model.Inversion.Value.ToString("c2") : "0.0"))

        </dd>

        <dt class="col-sm-6">
            Inversión Federal
        </dt>
        <dd class="col-sm-6">

            @((Model.Inversion.HasValue ? Model.InversionFederal.Value.ToString("c2") : "0.0"))

        </dd>

        <dt class="col-sm-6">
            Inversión Estatal
        </dt>
        <dd class="col-sm-6">

            @((Model.Inversion.HasValue ? Model.InversionEstatal.Value.ToString("c2") : "0.0"))

        </dd>

        <dt class="col-sm-6">
            Inversión Municipal
        </dt>
        <dd class="col-sm-6">

            @((Model.Inversion.HasValue ? Model.InversionMunicipal.Value.ToString("c2") : "0.0"))

        </dd>

        <dt class="col-sm-6">
            Inversión Beneficiario
        </dt>
        <dd class="col-sm-6">

            @((Model.Inversion.HasValue ? Model.InversionBeneficiario.Value.ToString("c2") : "0.0"))

        </dd>

        <dt class="col-sm-6">
            Programa
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.IdprogsogNavigation.Descripcion)
        </dd>

        <dt class="col-sm-6">
            Vertiente
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.IdvertienteNavigation.Nombre)
        </dd>

        <dt class="col-sm-6">
            Sub Vertiente
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.IdsubvertienteNavigation.Nombre)
        </dd>


        <dt class="col-sm-6">
            Estatus
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.IdestadoobraNavigation.Nombre)
        </dd>
        <dt class="col-sm-6">
            % Avance
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.Porcentajeavance)
        </dd>
        <dt class="col-sm-6">
            F. Termnio
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.Fechatermino)
        </dd>

    </dl>
</div>

