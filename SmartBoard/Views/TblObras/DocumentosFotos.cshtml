@model SmartBoard.Models.ExpedienteViewModalDetalle
@using SmartBoard.Models;
@{

    Layout = null;
    List<ObrasImagenesMetadata> listaimg = Model.obrasImagenesMetadata;
}

  <div class="row">
        <div class="form-group">
            
             <div class="p-4 col-sm-4">
        <form name="form_@Model.Id" method="post" enctype="multipart/form-data">
            
            <input type="hidden" id="IdDocObra" name="IdDocObra" value="@Model.Id" />
            <input type="hidden" id="IdDoc" name="IdDoc" value="@Model.Id" />

            <div class="fileUpload btn btn-outline-default">
                <input type="file" id="files_@Model.Id" name="files_@Model.Id" class="upload" onchange="SubirArchivoFotos(@Model.Id,@Model.Id)" />
                @*<input type="file" id="files_@Model.Id" name="files_@Model.Id" class="upload" onchange="SubirArchivoFotos(@Model.Numeroobraexterno,@Model.Id)" />*@

                <span class="fa-2x d-inline l-h-n color-fusion-400"> <i class="fal fa-camera"></i></span> <span></span>


            </div>

        </form>
    </div>

            <h1 center> Fotos</h1>
        </div>
    </div>

<div class="col-sm-12">

    @if (listaimg != null && listaimg.Count() > 0)
    {
        <div id="carouselExampleIndicators_@Model.Id" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                @if (listaimg != null && listaimg.Count() > 0)
                {
                    int pos = 0;
                    foreach (var item in listaimg)
                    {
                        if (pos == 0)
                        {

                            <li data-target="#carouselExampleIndicators_@Model.Id" data-slide-to="@pos" class="active"></li>
                        }
                        else
                        {
                            <li data-target="#carouselExampleIndicators_@Model.Id" data-slide-to="@pos"></li>
                        }
                        pos++;
                    }
                }

            </ol>
            <div class="carousel-inner">

                @if (listaimg != null && listaimg.Count() > 0)
                {
                    int pos = 0;
                    //foreach (var item in Model.ObrasImagenes)
                    foreach (var item in listaimg)
                    {
                        if (pos == 0)
                        {
                            <div class="carousel-item active">
                                <img class="d-block w-100 container_img" src="~/img/@item.Pathimagen" alt="First slide" id="myImg">

                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img class="d-block w-100 container_img" src="~/img/@item.Pathimagen" alt="Second slide">

                            </div>
                        }
                        pos++;
                    }
                }

            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators_@Model.Id" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators_@Model.Id" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

    }

</div>
